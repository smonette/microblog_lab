<ul>
  <li><a href="/">Home</a></li>
  <li><a href="/about_us">About This Site</a></li>
</ul>

<div class="container">
  <img src="<%= @user.image_url %>" width="300">
  <h1><%= @user.first_name %> <%= @user.last_name %></h1>
  <p><%= @user.email %></p>

  <% @user.pages.each do |page| %>
  	<p><a href="/users/<%= @user.id %>/pages/<%= page.id %>"><%= page.name %></a></p>
  <% end %>

  <p><a href="/users/<%= @user.id %>/edit ">Edit User</a></p>
  <p><a href="/users/<%= @user.id %>/posts/new">Add New Post</a></p>
  <p><a href="/users/<%= @user.id %>/posts ">View all of <%= @user.first_name %>'s posts >></a></p>
</div>