<div class="row">

  <div class="col-md-6 col-xs-12">
    <img src="<%= @user.image_url %>" class="profile-pic">
  </div>
  <div class="col-md-6 col-xs-12">
    <h1><%= @user.first_name %> <%= @user.last_name %></h1>
    <p><%= @user.email %></p>

    <% @user.pages.each do |page| %>
      <a href="/users/<%= @user.id %>/pages/<%= page.id %>" class="btn btn-default"><%= page.name %></a>
    <% end %>

    <p><a href="/users/<%= @user.id %>/edit " class="btn btn-default">Edit</a></p>
    <p><a href="/users/<%= @user.id %>/posts ">View all of <%= @user.first_name %>'s posts</a></p>
  </div>
</div>
