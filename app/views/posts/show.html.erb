<h2><%= @post.title %></h2>
<h4>By
  <a href="/users/<%= @user.id %>">
    <%= @user.first_name %> <%= @user.last_name %>
  </a>
</h4>
<p><%= @post.body %></p>

<a class="btn btn-default" href="/users/<%= @user.id %>/posts/<%= @post.id %>/edit" role="button">Edit Post</a>
<%= button_to "Delete this!", user_post_path(@post.user.id, @user.id), method: :delete, class: "btn btn-danger" %>

