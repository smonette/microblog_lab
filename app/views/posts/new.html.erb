<div class="container">
  <h2>Add New Post</h2>

  <%= form_for [@user, @post] do |f| %>
    <div class="form-group">
      <%= f.text_field :title, placeholder: "Post Title", class: "form-control", autofocus: true %>
    </div>
    <div class= "form-group">
      <%= f.text_area :body,  placeholder: "Post Content", class: "form-control" %>
    </div>
        <div class="form-group">
      <%= text_field_tag :tags, nil, class: "form-control", placeholder: "Tags (separated by commas)"  %>
    </div>
    <div class="form-group">
      <%= f.submit "Save Post", class: "form-control btn btn-primary" %>
    </div>
  <% end %>

</div>