<div class="row">
    <div class="col-xs-12 col-sm-8  col-sm-offset-2">
      <h2>Edit Your <%= @page.name %> Page</h2>

      <%= form_for ([@user, @page]) do |f| %>
      <div class="form-group">
        <%= f.label :content %>:
        <%= f.text_area :content, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "Save Changes", class: "form-control btn btn-primary" %>
      </div>
    <% end %>

  </div>
</div>