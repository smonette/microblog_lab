<div class="container">

  <% @tag.posts.each do |post| %>
    <h3><a href="/users/<%= post.user.id %>/posts/<%= post[:id] %>"><%= post[:title] %></a></h3>

    <% month = post[:created_at].month %>
    <% day = post[:created_at].day %>
    <% year =  post[:created_at].year %>

    <div><%= month %>.<%= day %>.<%= year %></div>
    <div><%= post[:body] %></div>
    <p>Post by: <a href="/users/<%= post.user.id %>"><%= post.user.first_name %></a></p>

    <p id="post-tags">
      Tags:
      <% post.tags.each do |tag| %>
        <a href="/tags/<%= tag[:id] %>">#<%= tag.name %></a>
      <% end %>
    </p>

      
    <% if post.comments.length > 0 %>
      <p><a href="/users/<%= post.user.id %>/posts/<%= post[:id] %>">Comments (<%= post.comments.length %>)</a></p>
    <% end %>

  <% end %>
</div>